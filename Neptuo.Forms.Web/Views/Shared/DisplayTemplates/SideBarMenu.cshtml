@model IEnumerable<Neptuo.Web.Mvc.Html.MenuItem>

<div class="side-menu">
    <ul>
        @foreach (var item in Model)
        {
            <li@(item.ActiveOn(ViewContext) ? " class=active" : "")>
                @Html.ActionLink(item.LinkText, item.Action, item.Controller)
            </li>
        }
    </ul>
</div>